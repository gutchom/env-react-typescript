{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "pretty": true,
    "removeComments": true,
    "importHelpers": true,
    "baseUrl": "src/scripts",
    "paths": {
      "*": ["*"],
      "app": ["src/scripts/app"]
    },
    "typeRoots": ["node_modules/@types", "src/scripts/types"]
  },
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsConfig": false
  },
  "compileOnSave": false
}
